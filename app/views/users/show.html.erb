<div class="cover-user-show">
  <div class="container">
    <div class="row">
      <% if user_signed_in? && @user == current_user %>
        <h3>マイページ</h3>
      <% else %>
        <h3><%= @user.name %>さんのページ</h3>
      <% end %>
    </div>

    <% if user_signed_in? && @user == current_user %>
      <p class="d-flex justify-content-end">
        <%= link_to 'プロフィール画像', edit_user_path(@user), class: "btn-sm btn-success" %>
      </p>
    <% end %>
    <div class="d-flex">
      <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.png", class: "mb-3 profile-img" %>
      <h4 class="ml-3 mb-3 card w-100"><%= @user.profile %></h4>
    </div>

    <div class="row">
      <% @posts.each do |post| %>
        <div class="one-post">
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, format: 'jpeg', size: '240x160' %>
          <% end %>
          <p class="mt-3"><%= post.location %></p>
          <p><%= "#{post.comments.count} コメント" %></p>
        </div>
      <% end %>
    </div>
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>