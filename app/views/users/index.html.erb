<div class="cover-user-index">
  <div class="container">
    <div class="row">
      <h3>ユーザー一覧</h3>
    </div>
    <div class="row">
      <% @users.each do |user| %>
        <div class="one-post card w-100">
          <%= link_to user_path(user) do %>
            <p><%= user.name %></p>
            <p><%= "#{user.posts.count} 投稿" %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>