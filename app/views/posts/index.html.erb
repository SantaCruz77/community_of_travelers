<div class="cover-index">
  <div class="container">
    <div class="row">
      <h3>旅行投稿一覧</h3>
    </div>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="one-post">
          <p><%= post.user.name %></p>
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, format: 'jpeg', size: '300x200' %>
          <% end %>
          <p></p>
          <p ><%= post.location %></p>
          <p><%= "#{post.comments.count} コメント" %></p>
        </div>
      <% end %>
    </div>
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>