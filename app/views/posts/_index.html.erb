<div class="row">
  <%= form_with url: posts_path, method: :get, local: true do |f| %>
    <div class="d-flex mt-3 mb-3">
      <%= f.text_field :search, id: "txt-search", class: "form-control input-group-prepend", placeholder: "キーワードを入力" %>
      <%= f.submit '検索', name: nil, id: "btn-search", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="row">
  <% posts.each do |post| %>
    <div class="one-post">
      <p><%= post.user.name %></p>
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg', size: '300x200' %>
      <% end %>
      <p></p>
      <p ><%= post.location %></p>
      <p><%= "#{post.comments.count} コメント" %></p>
    </div>
  <% end %>
</div>
<%= paginate posts, theme: 'twitter-bootstrap-4' %>